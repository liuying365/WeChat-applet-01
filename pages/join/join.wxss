.banner {
  display: block;
  width: 100%;
  height: 340rpx;
}

.block {
  padding: 20rpx;
}

.title {
  position: relative;
  line-height: 46rpx;
  padding-left: 50rpx;
  color: #2e5e86;
}

.title::before {
  position: absolute;
  top: 0;
  left: 20rpx;
  content: "";
  width: 12rpx;
  height: 46rpx;
  background: #2e5e86;
}

.description {
  display: block;
  margin-top: 20rpx;
  text-indent: 1rem;
}